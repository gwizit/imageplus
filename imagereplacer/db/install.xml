<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/imagereplacer/db" VERSION="2025101500" COMMENT="XMLDB file for Moodle local/imagereplacer"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_imagereplacer_log" COMMENT="Log of image replacement operations">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User who performed the operation"/>
        <FIELD NAME="searchterm" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Search term used"/>
        <FIELD NAME="filesreplaced" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Number of files replaced"/>
        <FIELD NAME="dbfilesreplaced" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Number of database files replaced"/>
        <FIELD NAME="filesfailed" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Number of files that failed"/>
        <FIELD NAME="dryrun" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Whether this was a dry run"/>
        <FIELD NAME="searchdatabase" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Whether database was searched"/>
        <FIELD NAME="searchfilesystem" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Whether file system was searched"/>
        <FIELD NAME="sourceimageinfo" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Information about the source image used"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time operation was started"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time operation was completed"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="searchterm" UNIQUE="false" FIELDS="searchterm"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
